<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WASLoaderTestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WASLoaderTestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <DesktopAcrylicBackdrop/>
    </Window.SystemBackdrop>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="IsMsix: " />
            <TextBlock x:Name="outputbox1" />
        </StackPanel>
        <Button Click="button1_Click">Default</Button>
        <Button Click="button2_Click">CompactOverlay</Button>
        <Button Click="button3_Click">FullScreen</Button>
        <Button Click="button4_Click">Overlapped</Button>
    </StackPanel>
</Window>
